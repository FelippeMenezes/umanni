<% content_for :title, "Import Users" %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header">
          <h1 class="card-title mb-0">
            <i class="fas fa-file-import"></i>
            Import Users
          </h1>
        </div>
        <div class="card-body">

          <%= form_tag import_admin_users_path, multipart: true, class: "mt-4" do %>
            <div class="form-group">
              <%= file_field_tag :file, class: "form-control mb-3", required: true, accept: ".csv" %>
            </div>

            <%= submit_tag "Import", class: "btn btn-primary" %>
            <%= link_to "Cancel", admin_dashboard_path, class: "btn btn-secondary" %>
          <% end %>
        </div>
          <div class="card-footer bg-light">
            <h6><i class="fas fa-info-circle"></i> Import Instructions:</h6>
            <ul class="mb-2">
              <li><strong>Required columns:</strong> full_name, email</li>
              <li><strong>Optional column:</strong> role ('admin' or 'user', default: 'user')</li>
              <li><strong>Optional column:</strong> password (if not provided, a random password will be generated)</li>
              <li><strong>File format:</strong> CSV with UTF-8 encoding</li>
            </ul>
            <p class="mb-0"><small>Download the <a href="/example_users.csv" download>example file</a> to see the correct format.</small></p>
          </div>
      </div>
    </div>
  </div>
</div>