<% content_for :title, "Edit User" %>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">
        <i class="fas fa-user-edit"></i>
        Edit User
      </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card shadow">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="fas fa-edit"></i>
            Edit User Info
          </h5>
        </div>
        <div class="card-body">
          <%= simple_form_for @user, url: admin_user_path(@user), html: { method: :put } do |f| %>
            <%= f.error_notification %>
            
            <div class="row">
              <div class="col-md-6">
                <%= f.input :full_name,
                            label: "Nome Completo",
                            required: true,
                            input_html: { class: "form-control" } %>
              </div>
              <div class="col-md-6">
                <%= f.input :email,
                            label: "Email",
                            required: true,
                            disabled: true,
                            input_html: { class: "form-control" } %>
                <div class="form-text">Email cannot be changed for existing users.</div>
              </div>
            </div>

            <div>
              <% if @user.avatar.attached? %>
                <%= image_tag @user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
                <%= image_tag "https://emojicdn.elk.sh/üë§", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>

              <div class="form-group mb-3">
                <label>Avatar (opcional)</label>

                <ul class="nav nav-pills mb-3" id="avatar-tab" role="tablist">
                  <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="file-tab" data-bs-toggle="tab" data-bs-target="#file-pane" type="button" role="tab" aria-controls="file-pane" aria-selected="true">Anexar Arquivo</button>
                  </li>
                  <li class="nav-item" role="presentation">
                    <button class="nav-link" id="url-tab" data-bs-toggle="tab" data-bs-target="#url-pane" type="button" role="tab" aria-controls="url-pane" aria-selected="false">Usar URL</button>
                  </li>
                </ul>

                <div class="tab-content" id="avatar-tab-content">
                  <div class="tab-pane fade show active" id="file-pane" role="tabpanel" aria-labelledby="file-tab" tabindex="0">
                    <%= f.input :avatar, as: :file, label: false, input_html: { id: "avatar-file-input", data: { avatar_target: "fileInput", action: "change->avatar#onFileChange" } } %>
                  </div>
                  <div class="tab-pane fade" id="url-pane" role="tabpanel" aria-labelledby="url-tab" tabindex="0">
                    <%= f.input :avatar_url, label: false, placeholder: 'https://exemplo.com/imagem.jpg', input_html: { id: "avatar-url-input", data: { avatar_target: "urlInput", action: "input->avatar#onUrlInput" } } %>
                  </div>
                </div>
                <small class="form-text text-muted">Escolha apenas uma op√ß√£o: arquivo ou URL.</small>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <label class="form-label">User role</label>
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="roleSwitch" name="user[role]"
                           value="admin" <%= 'checked' if @user.admin? %>
                           <%= 'disabled' if User.where(role: "admin").count <= 1 && @user.admin? %> >
                    <label class="form-check-label" for="roleSwitch">
                      <span id="roleLabel"><%= @user.admin? ? 'Admin' : 'User' %></span>
                    </label>
                  </div>
                  <div class="form-text <%= 'text-warning' if User.where(role: "admin").count <= 1 && @user.admin? %>" id="roleHelpText">
                    <% if User.where(role: "admin").count <= 1 && @user.admin? %>
                      <i class="fas fa-exclamation-triangle text-warning"></i> You are the last administrator and cannot change your role.
                    <% else %>
                      Check to make this user an Administrator
                    <% end %>
                  </div>
                </div>
              </div>
              <div>
                <div class="col-md-6">
                  <%= f.input :password,
                              label: "New Password (optional)",
                              required: false,
                              input_html: { class: "form-control", autocomplete: "new-password" } %>
                </div>
                <div class="col-md-6">
                  <%= f.input :password_confirmation,
                              label: "Confirm New Password",
                              required: false,
                              input_html: { class: "form-control", autocomplete: "new-password" } %>
                </div>
              </div>
            </div>

            <script>
              document.addEventListener('DOMContentLoaded', function() {
                const roleSwitch = document.getElementById('roleSwitch');
                const roleLabel = document.getElementById('roleLabel');
                const roleHelpText = document.getElementById('roleHelpText');
                const isLastAdmin = <%= User.where(role: "admin").count <= 1 && @user.admin? %>;

                const fileInput = document.getElementById('avatar-file-input');
                const urlInput = document.getElementById('avatar-url-input');
                const fileTab = document.getElementById('file-tab');
                
                roleSwitch.addEventListener('change', function() {
                  if (this.checked) {
                    roleLabel.textContent = 'Admin';
                    this.value = 'admin';
                    roleHelpText.textContent = 'Check to make this user an Administrator';
                    roleHelpText.className = 'form-text';
                  } else {
                    roleLabel.textContent = 'User';
                    this.value = 'user';
                    roleHelpText.textContent = 'Check to make this user an Administrator';
                    roleHelpText.className = 'form-text';
                  }
                });
                
                if (isLastAdmin) {
                  roleSwitch.disabled = true;
                  roleHelpText.innerHTML = '<i class="fas fa-exclamation-triangle text-warning"></i> You are the last administrator and cannot change your role.';
                  roleHelpText.className = 'form-text text-warning';
                }

                function toggleAvatarInputs() {
                  if (fileTab.classList.contains('active')) {
                    urlInput.value = '';
                    urlInput.disabled = true;
                    fileInput.disabled = false;
                  } else {
                    fileInput.value = '';
                    fileInput.disabled = true;
                    urlInput.disabled = false;
                  }
                }
                document.querySelectorAll('#avatar-tab button').forEach(tab => tab.addEventListener('shown.bs.tab', toggleAvatarInputs));
                toggleAvatarInputs();
              });
            </script>

            <div class="row mt-4">
              <div class="col-12">
                <div class="d-flex justify-content-between">
                  <%= link_to admin_users_path, class: "btn btn-outline-secondary" do %>
                    <i class="fas fa-arrow-left"></i> Back to User List
                  <% end %>
                  
                  <div>
                    <%= link_to admin_dashboard_path, class: "btn btn-outline-primary me-2" do %>
                      <i class="fas fa-home"></i> Dashboard
                    <% end %>
                    <%= f.button :submit, "Update User", class: "btn btn-success" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>