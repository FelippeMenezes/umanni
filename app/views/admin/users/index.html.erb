<% content_for :title, "Registered Users" %>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">
        <i class="fas fa-users"></i>
        Registered Users
      </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="card-title mb-0">
            <i class="fas fa-list"></i>
            All Users (<%= @users.count %>)
          </h5>
          <%= link_to "Dashboard", admin_dashboard_path,
                      class: "btn btn-outline-primary btn-sm" %>
        </div>
        <div class="card-body">
          <% if @users.any? %>
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Sign up date</th>
                    <th>Last Sign In</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td>
                        <%= user.full_name %>
                        <% if user == current_user %>
                            <span class="badge bg-info ms-1">You</span>
                        <% end %>
                      </td>
                      <td>
                        <% if user.admin? %>
                          <span class="badge bg-warning">Admin</span>
                        <% else %>
                          <span class="badge bg-secondary">User</span>
                        <% end %>
                      </td>
                      <td>
                        <%= l(user.created_at, format: :short) %>
                      </td>
                      <td>
                        <% if user.last_sign_in_at %>
                          <%= l(user.last_sign_in_at, format: :short) %>
                        <% else %>
                          <span class="text-muted">Not signed in yet.</span>
                        <% end %>
                      </td>
                      <td>
                        <div class="d-flex">
                          <%= link_to edit_admin_user_path(user),
                                      class: "btn btn-outline-primary btn-sm me-1",
                                      title: "Edit user #{user.full_name}" do %>
                            <i class="fas fa-edit"></i> Edit
                          <% end %>
                          

                          <%= button_to admin_user_path(user),
                                        method: :delete,
                                        class: "btn btn-outline-danger btn-sm",
                                        title: "Delete user #{user.full_name}",
                                        data: {
                                          turbo_confirm: "Are you sure you want to delete #{user.full_name}? This action cannot be undone."
                                        } do %>
                            <i class="fas fa-trash-alt"></i> Delete
                          <% end %>

                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-users fa-3x text-muted mb-3"></i>
              <p class="text-muted">No users found.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <small class="text-muted">
        <i class="fas fa-clock"></i>
        Last updated: <%= l(Time.current, format: :long) %>
      </small>
    </div>
  </div>
</div>