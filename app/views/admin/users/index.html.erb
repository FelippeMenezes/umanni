<% content_for :title, "Lista de Usuários" %>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">
        <i class="fas fa-users"></i>
        Lista de Usuários Registrados
      </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="card-title mb-0">
            <i class="fas fa-list"></i>
            Todos os Usuários (<%= @users.count %>)
          </h5>
          <%= link_to "Voltar ao Dashboard", admin_dashboard_path, 
                      class: "btn btn-outline-primary btn-sm" %>
        </div>
        <div class="card-body">
          <% if @users.any? %>
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Data de Registro</th>
                    <th>Último Acesso</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td><%= user.id %></td>
                      <td><%= user.full_name %></td>
                      <td>
                        <strong><%= user.email %></strong>
                        <% if user == current_user %>
                          <span class="badge bg-info ms-1">Você</span>
                        <% end %>
                      </td>
                      <td>
                        <% if user.admin? %>
                          <span class="badge bg-warning">Administrador</span>
                        <% else %>
                          <span class="badge bg-secondary">Usuário</span>
                        <% end %>
                      </td>
                      <td>
                        <%= l(user.created_at, format: :short) %>
                      </td>
                      <td>
                        <% if user.last_sign_in_at %>
                          <%= l(user.last_sign_in_at, format: :short) %>
                        <% else %>
                          <span class="text-muted">Nunca</span>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-users fa-3x text-muted mb-3"></i>
              <p class="text-muted">Nenhum usuário encontrado.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <small class="text-muted">
        <i class="fas fa-clock"></i>
        Última atualização: <%= l(Time.current, format: :long) %>
      </small>
    </div>
  </div>
</div>